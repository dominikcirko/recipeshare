<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog
            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001-create-recipes-table" author="dominik">

        <createTable tableName="recipes">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="INT"/>

            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="description" type="TEXT"/>

            <column name="instructions" type="TEXT">
                <constraints nullable="false"/>
            </column>

            <column name="cook_time_minutes" type="INT"/>

            <column name="ingredients" type="TEXT">
                <constraints nullable="false"/>
            </column>

            <column name="calories" type="INT"/>
            <column name="protein" type="INT"/>
            <column name="fat" type="INT"/>
            <column name="carbs" type="INT"/>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="NOW()"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="NOW()"/>
            <column name="deleted_at" type="TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="recipes"
                baseColumnNames="user_id"
                constraintName="fk_recipes_user"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>
